vim.opt.splitbelow = true -- open new vertical split bottom
vim.opt.splitright = true -- open new horizontal splits right
vim.opt.autoread = true
vim.o.termguicolors = true

{{ if eq .chezmoi.os "linux" "windows"}}
vim.cmd("language en_US.utf8")
{{ else if eq .chezmoi.os "darwin" }}
vim.cmd("language en_US.UTF-8")
{{ end }}

if vim.g.neovide then
{{ if eq .chezmoi.os "darwin" }}
    vim.o.guifont = "MesloLGS Nerd Font Mono:h14"
{{ else }}
    vim.o.guifont = "MesloLGS Nerd Font Mono:h11.5"
{{ end }}
    vim.keymap.set("n", "M-+", "<cmd>ZoomIn<cr>", { silent = true })
    vim.keymap.set("n", "M--", "<cmd>ZoomOut<cr>", { silent = true })
    vim.keymap.set("n", "c-+", "<cmd>ZoomIn<cr>", { silent = true })
    vim.keymap.set("n", "c--", "<cmd>ZoomOut<cr>", { silent = true })
end

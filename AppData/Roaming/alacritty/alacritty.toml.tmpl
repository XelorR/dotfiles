{{ if eq .chezmoi.os "windows" }}import = ["{{ .chezmoi.homeDir }}\\AppData\\Roaming\\alacritty\\catppuccin\\catppuccin-mocha.toml"]{{ else }}import = ["{{ .chezmoi.homeDir }}/.config/alacritty/catppuccin/catppuccin-mocha.toml"]{{ end }}

[env]
TERM = "xterm-256color"

[shell]
program = {{ if eq .chezmoi.os "windows" }}{{ lookPath "powershell" | quote }}{{ else }}{{ lookPath "fish" | quote }}{{ end }}

[font]
size = {{ if eq .chezmoi.os "darwin" }}14{{ else }}11.5{{ end }}

[font.normal]
family = "MesloLGS Nerd Font Mono"
#family = "JetBrainsMono NF Light"
#family = "iMWritingMono Nerd Font"

[font.offset]
x = 0
y = 0

[[keyboard.bindings]]
action = "SpawnNewInstance"
key = "N"
mods = "Alt"

[[keyboard.bindings]]
action = "Copy"
key = "C"
mods = "Alt"

[[keyboard.bindings]]
action = "Paste"
key = "V"
mods = "Alt"

[[keyboard.bindings]]
action = "Quit"
key = "W"
mods = "Alt"

[[keyboard.bindings]]
action = "Quit"
key = "Q"
mods = "Alt"

[[keyboard.bindings]]
action = "SpawnNewInstance"
key = "N"
mods = "Command"


{{ if ne .chezmoi.os "windows" -}}
[[language]]
name = "python"
language-servers = [ "pyright" ]
formatter = { command = 'black', args = ["--quiet", "-"] }
auto-format = true
{{ else -}}
[[language]]
name = "python"
language-servers = [ "ruff" ]
auto-format = true
[language-server.ruff]
command = "ruff"
config = { settings = { args = ["server"] } }
{{ end -}}

